<UserControl x:Class="InventoryEditor.Controls.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="741*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>

        <TextBox IsReadOnly="true" Grid.Column="0" Name="fileLoc"/>
        <Button Content="..." Grid.Column="1" Click="ButtonBase_OnClick"/>
    </Grid>
</UserControl>
